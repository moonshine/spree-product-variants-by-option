<% content_for :sidebar do %>
  <%= render "shared/taxonomies" %>
<% end %>

<% if @variants.empty? %>
  <%= t(:no_variants_found) %>
<% end %>

<% if @variants.any? %>
<ul class="product-listing">
  <% @variants.each do |option, variant| %>
    <%= render :partial => 'variant', :locals => {:variant => variant, :option => option, :options_text => ''} %>
  <% end %>
</ul>
<% end %>

