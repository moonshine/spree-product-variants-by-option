<% content_for :sidebar do %>
  <%= render "shared/taxonomies" %>
<% end %>

<% if @variants.empty? %>
  <%= t(:no_products_found) %>
<% end %>

<% if @variants.any? %>
<ul class="product-listing">
  <% @variants.each do |variant| %>
    <li id="variant_<%= variant[1].id %>">
      <%= link_to small_image(variant[1]), show_variant_path(:id => @product.permalink, :option => variant[0]) %>
      <%= link_to "#{variant[1].try(:short_description)} <span class='price selling'>#{product_price(variant[1])}</span>",
        show_variant_path(:id => @product.permalink, :option => variant[0]), :class => 'info' %>
    </li>
  <% end %>
</ul>
<% end %>

