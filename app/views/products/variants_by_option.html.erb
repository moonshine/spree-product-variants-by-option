<% content_for :sidebar do %>
  <%= render "shared/taxonomies" %>
<% end %>

<% if @variants.empty? %>
  <%= t(:no_variants_found) %>
<% end %>

<% if @variants.any? %>
<ul class="product-listing">
  <% @variants.each do |variant| %>
    <%= render :partial => 'variant', :locals => {:variant => variant, :option => get_variant_option(variant), :options_text => variant.options_text} %>
  <% end %>
</ul>
<% end %>

<hr class="space" />

<% if @variants.respond_to?(:total_pages)%>
  <%= will_paginate(@variants,
                    :previous_label => "&#171; #{t('previous')}",
                    :next_label => "#{t('next')} &#187;") %>
<% end %>
<hr class="space" />
